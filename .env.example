# ============================================
# CHROME CONFIGURATION
# ============================================
# Chrome profile to use (Default, Profile 1, Profile 2, etc.)
# Find your profile: chrome://version/ -> Profile Path
CHROME_PROFILE_NAME="Default"

# ============================================
# CALENDAR INTEGRATION
# ============================================
# Auto-start calendar monitoring when Lumina starts
AUTO_START_CALENDAR_MONITOR="true"

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Local storage path for recordings, transcripts, and minutes
LOCAL_STORAGE_PATH="./storage"

# Azure Blob Storage (Optional - for cloud storage)
STORAGE_ACCOUNT_NAME="your_storage_account_name"
STORAGE_ACCOUNT_KEY="your_storage_account_key"
CONTAINER_NAME="meeting-recordings"

# ============================================
# WHISPER CONFIGURATION
# ============================================
# Whisper model size: tiny, base, small, medium, large
# Larger = better accuracy but slower
WHISPER_MODEL="base"

# ============================================
# LOCAL LLM CONFIGURATION
# ============================================
# LLM Provider: ollama, llamacpp, azure
LOCAL_LLM_PROVIDER="ollama"

# Model name for Ollama (llama3, mistral, phi3, etc.)
LOCAL_LLM_MODEL="llama3"

# Model path for LLaMA.cpp (only if using llamacpp provider)
# LLAMACPP_MODEL_PATH="/path/to/model.gguf"

# ============================================
# AZURE OPENAI (Fallback LLM)
# ============================================
# Azure OpenAI credentials (used as fallback if local LLM fails)
OPENAI_API_KEY="your_azure_openai_api_key"
API_VERSION="2024-08-01-preview"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"

# ============================================
# AZURE SPEECH SERVICES (Optional)
# ============================================
# Azure Speech-to-Text (alternative to local Whisper)
AZURE_SPEECH_KEY="your_azure_speech_key"
AZURE_SPEECH_REGION="eastus"

# ============================================
# EMAIL CONFIGURATION
# ============================================
# SMTP settings for sending meeting minutes via email
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"

# For Gmail:
# 1. Enable 2FA: https://myaccount.google.com/security
# 2. Create App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character app password (not your regular password)

# For other providers:
# Outlook: smtp.office365.com:587
# Yahoo: smtp.mail.yahoo.com:587
# Custom SMTP: your-smtp-server.com:587

# ============================================
# GOOGLE CALENDAR API
# ============================================
# No configuration needed here
# Place your credentials file as:
# - credentials.json OR
# - client_secret_*.json (downloaded from Google Cloud Console)
#
# Run: python calendar_service.py
# This will create token.pickle after first authentication

# ============================================
# INSTRUCTIONS
# ============================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual credentials (never commit .env to git!)
# 3. At minimum, configure:
#    - CHROME_PROFILE_NAME (if not using "Default")
#    - LOCAL_LLM_PROVIDER and LOCAL_LLM_MODEL (for meeting minutes)
#    - SMTP_USER and SMTP_PASSWORD (for email delivery)
# 4. Optional cloud services:
#    - Azure OpenAI (fallback LLM)
#    - Azure Blob Storage (cloud recordings)
#    - Azure Speech Services (cloud transcription)
